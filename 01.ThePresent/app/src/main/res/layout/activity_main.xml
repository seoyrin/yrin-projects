<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    //Top 구성
    <ImageView
        android:id="@+id/main_top"
        android:layout_width="0dp"
        android:layout_height="170px"
        android:background="@drawable/main_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    //메뉴버튼

    <ImageButton
        android:id="@+id/main_menu"
        android:layout_width="74px"
        android:layout_height="76px"
        android:layout_marginTop="39px"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="60px"
        android:background="@drawable/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    //뒤로가기버튼

    <ImageButton
        android:id="@+id/main_back"
        android:layout_width="74px"
        android:layout_height="76px"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="60px"
        android:layout_marginTop="39px"
        android:background="@drawable/back"
        android:onClick="onButtonFinishClicked"
        app:layout_constraintStart_toStartOf="@+id/main_top"
        app:layout_constraintTop_toTopOf="parent" />
    //Main버튼 6개

    <ImageButton
        android:id="@+id/main_1anni"
        android:layout_width="450px"
        android:layout_height="492px"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/main_1anni"
        android:onClick="onButtonAnniClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/main_2days"
        android:layout_width="450px"
        android:layout_height="492px"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/main_2days"
        android:onClick="onButtonDaysClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/main_3money"
        android:layout_width="450px"
        android:layout_height="492px"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_3money"
        android:onClick="onButtonMoneyClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_1anni" />

    <ImageButton
        android:id="@+id/main_4flower"
        android:layout_width="450px"
        android:layout_height="492px"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/main_4flower"
        android:onClick="onButtonFlowerClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_2days" />

    <ImageButton
        android:id="@+id/main_5cake"
        android:layout_width="450px"
        android:layout_height="492px"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_5cake"
        android:onClick="onButtonCakeClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_3money" />

    <ImageButton
        android:id="@+id/main_6couple"
        android:layout_width="450px"
        android:layout_height="492px"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/main_6couple"
        android:onClick="onButtonCoupleClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_4flower" />

</android.support.constraint.ConstraintLayout>

    <include layout="@layout/activity_menu"/>

</android.support.v4.widget.DrawerLayout>